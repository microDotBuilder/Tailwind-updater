{
  "name": "@micro-builder/tailwind-updater",
  "version": "0.0.2",
  "description": "An CLI tool that installs tailwindcss in your project.",
  "repository": {
    "type": "git",
    "url": "https://github.com/microDotBuilder/Tailwind-update.git"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/cli.js",
  "module": "./dist/cli.mjs",
  "private": false,
  "types": "./dist/cli.d.ts",
  "scripts": {
    "build": "tsup src/cli.ts --format cjs,esm --dts",
    "test:integration": "vitest run src/tests/integration --poolOptions.threads.singleThread",
    "dev": "jiti src/cli.ts ",
    "start": "jiti src/cli.ts ",
    "typecheck": "tsc",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "ci": "pnpm run lint && pnpm run test && pnpm run build",
    "release": "pnpm run ci && changeset publish"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "child_process": "^1.0.2",
    "cleye": "^1.3.2",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@micro-builder/package-practice": "^1.0.4",
    "@types/node": "^20.11.18",
    "tsup": "^8.3.0",
    "jiti": "^1.21.3",
    "typescript": "^5.4.5",
    "vitest": "^2.1.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
