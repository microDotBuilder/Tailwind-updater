{
  "name": "@micro-builder/tailwind-updater",
  "version": "0.0.6",
  "description": "An CLI tool that installs tailwindcss in your project.",
  "repository": {
    "type": "git",
    "url": "https://github.com/microDotBuilder/Tailwind-update.git"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/cli.cjs",
  "module": "./dist/cli.mjs",
  "types": "./dist/cli.d.cts",
  "bin": {
    "tailwind-updater": "./dist/cli.mjs",
    "tu": "./dist/cli.mjs"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "private": false,
  "scripts": {
    "build": "pkgroll",
    "test:integration": "vitest run src/tests/integration --poolOptions.threads.singleThread",
    "dev": "jiti src/cli.ts ",
    "start": "jiti ./src/cli.ts",
    "typecheck": "tsc",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "ci": "pnpm run lint && pnpm run test && pnpm run build",
    "release": "pnpm run ci && changeset publish"
  },
  "dependencies": {
    "@antfu/ni": "^0.23.0",
    "@clack/prompts": "^0.7.0",
    "child_process": "^1.0.2",
    "cleye": "^1.3.2",
    "fast-glob": "^3.3.2",
    "@types/fs-extra": "^11.0.4",
    "fs-extra": "^11.2.0",
    "ora": "^8.1.0",
    "pkgroll": "^2.5.0",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@micro-builder/package-practice": "^1.0.4",
    "@types/node": "^20.11.18",
    "jiti": "^1.21.3",
    "tsup": "^8.3.0",
    "typescript": "^5.4.5",
